<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv_main_menu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/main_menu"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scan_bill_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button"
        android:text="@string/scan_bill"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/tv_main_menu" />

    <Button
        android:id="@+id/add_new_bill_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button"
        android:text="@string/add_new_bill"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/scan_bill_button" />

    <Button
        android:id="@+id/see_bill_list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button"
        android:text="@string/show_bill_history"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/add_new_bill_button" />

    <Button
        android:id="@+id/delete_db_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_button"
        android:text="@string/delete_bills"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/logout_button" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_button"
        android:text="@string/logout"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>